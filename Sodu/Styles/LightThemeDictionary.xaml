<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sodu.Styles">

    <!--页面背景颜色-->
    <SolidColorBrush x:Key="PageBackground" Color="#FFFAFAFA"/>

    <!--左侧汉堡菜单背景色-->
    <SolidColorBrush x:Key="LeftPanelBackground" Color="#FFF5F5F7"/>


    <!--高亮蓝色-->
    <SolidColorBrush x:Key="HigntLightlBackColor" Color="#FF3388FF"/>


    <!--列表项字体颜色-->
    <SolidColorBrush x:Key="ListItemTextFroeground"  Color="#FF004D00"  />
    <!--<SolidColorBrush x:Key="ListItemTextFroeground"  Color="#FF333333"  />-->

    <!--提示信息字体颜色-->
    <SolidColorBrush x:Key="UnReadDataTextFroeground"  Color="Blue"  />

    <!--标题字体字体颜色-->
    <SolidColorBrush x:Key="TitleTextFroeground"  Color="#FF333333"  />

    <!--鼠标悬浮背景色-->
    <SolidColorBrush x:Key="ContentButtonPointerOverBackground"  Color="#FFF2F2F3"  />

    <!--鼠标点击背景色-->
    <SolidColorBrush x:Key="ContentButtonPressedBackground"  Color="#FFE8E8EA"  />

    <!--正文字体颜色-->
    <SolidColorBrush x:Key="TextContentForeground"  Color="Black"  />
    <!--FFF0F0F0-->

    <!--白色-->
    <SolidColorBrush x:Key="BaseColor"  Color="Black"  />

</ResourceDictionary>
