<UserControl
    x:Class="Sodu.UC.UC_LocalBookItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sodu.UC"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="130"
    d:DesignWidth="500">
    <Button HorizontalAlignment="Stretch" Style="{StaticResource  ContentButtonStyle}" x:Name="btn" Foreground="#FF004D00"  Command="{Binding ElementName=root,Path= Command}" CommandParameter="{Binding ElementName=root,Path=CommandParameter}">
        <Grid  HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <TextBlock Text="俗人回档" Grid.Row="0" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0"></TextBlock>
            <TextBlock  Grid.Row="1" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0">
            <Run Text="本地最新章节:  "></Run>
            <Run Text="第一一一章 破译"></Run>
            </TextBlock>
            <TextBlock   Grid.Row="2" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0">
            <Run Text="最后阅读章节:  "></Run>
            <Run Text="第一一一章 破译"></Run>
            </TextBlock>
        </Grid>
    </Button>
</UserControl>
